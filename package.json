{
  "name": "template-intelligence-engine",
  "version": "1.0.0",
  "description": "AI-powered document generation system for financial advisors - AdvisoryAI Hack-to-Hire Challenge 2025",
  "main": "server/index.js",
  "scripts": {
    "setup": "npm install && cd client && npm install && cd ..",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "build": "npm install && cd client && npm install && npm run build",
    "start": "node server/index.js",
    "postinstall": "cd client && npm install"
  },
  "keywords": [
    "financial",
    "advisory",
    "ai",
    "documents",
    "template",
    "automation",
    "suitability-report",
    "claude",
    "anthropic"
  ],
  "author": "Chandana",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chandana28cs/template-intelligence-engine.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "pizzip": "^3.1.6",
    "docxtemplater": "^3.42.3",
    "jszip": "^3.10.1",
    "xml2js": "^0.6.2",
    "uuid": "^9.0.1",
    "@anthropic-ai/sdk": "^0.73.0",
    "mammoth": "^1.6.0",
    "pdf-parse": "^2.4.5",
    "docx": "^9.5.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}